platform :ios, '15.1'

require Pod::Executable.execute_command('node', ['-p',
  'require.resolve("react-native/scripts/react_native_pods.rb", {paths: [process.argv[1]]})',
  __dir__
]).strip

prepare_react_native_project!

use_frameworks! :linkage => :static

target 'TestApp' do
  config = use_native_modules!

  use_react_native!(
    :path => config[:reactNativePath],
    :hermes_enabled => true,
    :app_path => "#{Pod::Config.instance.installation_root}/..",
    :new_arch_enabled => false
  )

  post_install do |installer|
    react_native_post_install(installer, config[:reactNativePath])

    # üîß Wymuszenie deployment targetu dla WSZYSTKICH pod√≥w
    installer.pods_project.targets.each do |t|
      t.build_configurations.each do |cfg|
        cfg.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '15.1'
      end
    end

    # üî• Twardy patch na ReactAppDependencyProvider.podspec
    podspec_path = File.join(__dir__, 'build/generated/ios/ReactAppDependencyProvider.podspec')
    if File.exist?(podspec_path)
      content = File.read(podspec_path)
      # Nadpisz CA≈ÅƒÑ sekcjƒô platform na iOS 15.0
      content = content.gsub(/s\.platforms\s*=.*$/, 's.platforms = { :ios => "15.1" }')
      File.write(podspec_path, content)
      Pod::UI.puts "‚úÖ Patched ReactAppDependencyProvider.podspec to use iOS 15.1"
    else
      Pod::UI.puts "‚ö†Ô∏è  ReactAppDependencyProvider.podspec not found yet (will patch next time)"
    end
  end
end